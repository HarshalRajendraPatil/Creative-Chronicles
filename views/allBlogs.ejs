<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="shortcut icon" href="img/favicon.ico" type="image/x-icon" />
    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      html {
        font-size: 62.5%;
      }

      body {
        background-color: orange;
      }

      .header {
        display: flex;
        gap: 1rem;
        justify-content: space-between;
        align-items: center;
        background-color: black;
        padding: 1.6rem 3.2rem;
      }

      .logo {
        height: 5.5rem;
      }

      .nav-link-box {
        display: flex;
        gap: 6rem;
      }

      .nav-link-box {
        list-style: none;
      }

      .nav-link:link,
      .nav-link:visited {
        display: inline-block;
        text-decoration: none;
        font-size: 2rem;
        color: #fff;
        transition: all 0.3s;
      }

      .nav-link:hover,
      .nav-link:active {
        transform: scale(1.4);
        color: greenyellow;
      }

      .container {
        max-width: 120rem;
        display: flex;
        flex-direction: column;
        gap: 5rem;
        padding: 1.5rem 3rem;
        margin: 0 auto;
      }

      .blog-info {
        display: flex;
        gap: 4rem;
        background-color: black;
        color: orange;
        border: 3px solid white;
        padding: 1.5rem 3rem;
      }

      .blog-img {
        width: 30%;
      }

      .blog-text {
        display: flex;
        flex-direction: column;
        gap: 3rem;
        justify-content: center;
      }

      .blog-title {
        font-size: 5rem;
      }

      .blog-body {
        font-size: 2rem;
      }

      .link:link,
      .link:visited {
        color: white;
      }

      .img {
        width: 100%;
        height: 100%;
      }

      .search-box {
        max-width: 40%;
        display: flex;
        align-items: center;
        gap: 1rem;
      }

      .search {
        width: 80%;
        padding: 0.5rem 1rem;
        font-size: 2rem;
      }

      .submit {
        padding: 0.5rem;
        font-size: 2rem;
      }

      .search-box-2 {
        display: none;
      }

      @media (max-width: 900px) {
        .blog-info {
          padding: 1rem 1.5rem;
        }
      }

      @media (max-width: 850px) {
        html {
          font-size: 50%;
        }
      }

      @media (max-width: 700px) {
        .blog-info {
          flex-direction: column;
        }
        .blog-img {
          display: block;
          width: 70%;
          margin: 0 auto;
        }
        .blog-title {
          text-align: center;
        }
      }

      @media (max-width: 600px) {
        html {
          font-size: 45%;
        }
      }

      @media (max-width: 500px) {
        .blog-img {
          width: 100%;
        }
        .search {
          font-size: 1rem;
        }
        .submit {
          font-size: 1rem;
        }
      }

      @media (max-width: 450px) {
        html {
          font-size: 35%;
        }
      }

      @media (max-width: 400px) {
        .search-box {
          display: none;
        }
        .search-box-2 {
          display: block;
          width: 100%;
        }
        .search {
          font-size: 2rem;
        }
        .submit {
          font-size: 2rem;
        }
      }
    </style>
    <title>Creative Chronicles</title>
  </head>
  <body>
    <header class="header">
      <div class="header-img">
        <img src="img/logo.png" class="logo" alt="" srcset="" />
      </div>
      <nav class="nav">
        <ul class="nav-link-box">
          <li><a href="/" class="nav-link">Home</a></li>
          <li><a href="/blogs" class="nav-link">Blogs</a></li>
          <li><a href="/subscribe" class="nav-link">Subscribe</a></li>
        </ul>
      </nav>
      <form action="/blogs" class="search-box" method="post">
        <input
          type="search"
          name="search"
          class="search"
          id=""
          placeholder="Search for a blog"
        />
        <button type="submit" class="submit">Search</button>
      </form>
    </header>
    <div class="container">
      <form action="/blogs" class="search-box-2" method="post">
        <input
          type="search"
          name="search"
          class="search"
          id=""
          placeholder="Search for a blog"
        />
        <button type="submit" class="submit">Search</button>
      </form>
      <% blog.forEach(el => { %>
      <div class="blog-info">
        <div class="blog-img">
          <img
            src="<%= el.coverImage %>"
            class="img"
            alt="Image related to blog"
            srcset=""
          />
        </div>
        <div class="blog-text">
          <h2 class="blog-title"><%= el.title %></h2>
          <p class="blog-body">
            <%= el.body %>...
            <a href="/<%= el._id %>" class="link">Read More</a>
          </p>
        </div>
      </div>
      <% }) %>
    </div>
  </body>
</html>
